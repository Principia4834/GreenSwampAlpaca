{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "GreenSwamp Alpaca Settings",
  "description": "Configuration schema for GreenSwamp Alpaca mount control",
  "type": "object",
  "properties": {
    "SkySettings": {
      "type": "object",
      "description": "Mount and telescope settings",
      "properties": {
        "Mount": {
          "type": "string",
          "description": "Mount type",
          "enum": ["Simulator", "SkyWatcher"],
          "default": "Simulator"
        },
        "Port": {
          "type": "string",
          "description": "Serial port for mount communication",
          "pattern": "^COM[0-9]+$",
          "default": "COM3"
        },
        "BaudRate": {
          "type": "integer",
          "description": "Serial communication baud rate",
          "enum": [9600, 19200, 38400, 57600, 115200],
          "default": 115200
        },
        "Latitude": {
          "type": "number",
          "description": "Observer latitude in degrees",
          "minimum": -90,
          "maximum": 90,
          "default": 28.5
        },
        "Longitude": {
          "type": "number",
          "description": "Observer longitude in degrees",
          "minimum": -180,
          "maximum": 180,
          "default": -81.5
        },
        "Elevation": {
          "type": "number",
          "description": "Observer elevation in meters",
          "minimum": -500,
          "maximum": 9000,
          "default": 30.0
        },
        "AutoTrack": {
          "type": "boolean",
          "description": "Enable tracking on mount connection",
          "default": false
        },
        "AlignmentMode": {
          "type": "string",
          "description": "Mount alignment mode",
          "enum": ["AltAz", "Polar", "GermanPolar"],
          "default": "GermanPolar"
        },
        "EquatorialCoordinateType": {
          "type": "string",
          "description": "Equatorial coordinate system",
          "enum": ["equTopocentric", "equJ2000", "equJNow"],
          "default": "equTopocentric"
        },
        "Refraction": {
          "type": "boolean",
          "description": "Apply atmospheric refraction correction",
          "default": true
        },
        "Temperature": {
          "type": "number",
          "description": "Ambient temperature in Celsius for refraction calculation",
          "minimum": -50,
          "maximum": 50,
          "default": 20.0
        },
        "Pressure": {
          "type": "number",
          "description": "Atmospheric pressure in millibars",
          "minimum": 800,
          "maximum": 1100,
          "default": 1013.25
        },
        "CustomGearing": {
          "type": "boolean",
          "description": "Use custom gearing values",
          "default": false
        },
        "CustomRa360Steps": {
          "type": "integer",
          "description": "Custom RA axis steps per 360 degrees",
          "minimum": 1,
          "default": 9024000
        },
        "CustomRaWormTeeth": {
          "type": "integer",
          "description": "Custom RA worm gear teeth count",
          "minimum": 1,
          "default": 180
        },
        "CustomDec360Steps": {
          "type": "integer",
          "description": "Custom Dec axis steps per 360 degrees",
          "minimum": 1,
          "default": 9024000
        },
        "CustomDecWormTeeth": {
          "type": "integer",
          "description": "Custom Dec worm gear teeth count",
          "minimum": 1,
          "default": 180
        },
        "RaBacklash": {
          "type": "integer",
          "description": "RA backlash compensation in steps",
          "minimum": 0,
          "default": 0
        },
        "DecBacklash": {
          "type": "integer",
          "description": "Dec backlash compensation in steps",
          "minimum": 0,
          "default": 0
        },
        "MinPulseDurationRa": {
          "type": "integer",
          "description": "Minimum RA pulse guide duration in milliseconds",
          "minimum": 0,
          "default": 20
        },
        "MinPulseDurationDec": {
          "type": "integer",
          "description": "Minimum Dec pulse guide duration in milliseconds",
          "minimum": 0,
          "default": 20
        },
        "DecPulseGoTo": {
          "type": "boolean",
          "description": "Use GOTO mode for Dec pulse guiding",
          "default": false
        },
        "UseAdvancedCommands": {
          "type": "boolean",
          "description": "Use advanced mount command set if available",
          "default": false
        },
        "MonitorPulse": {
          "type": "boolean",
          "description": "Log pulse guide commands for analysis",
          "default": false
        },
        "AlternatingPPec": {
          "type": "boolean",
          "description": "Use alternating PPEC during pulse guiding",
          "default": false
        },
        "TrackingMode": {
          "type": "string",
          "description": "Tracking rate mode",
          "enum": ["Sidereal", "Lunar", "Solar", "King", "Custom"],
          "default": "Sidereal"
        },
        "UseLimits": {
          "type": "boolean",
          "description": "Enable altitude and horizon limits",
          "default": false
        }
      },
      "required": ["Mount", "Port", "Latitude", "Longitude"]
    }
  }
}
