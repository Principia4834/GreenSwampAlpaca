{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "GreenSwamp Alpaca Settings",
  "description": "Configuration schema for GreenSwamp Alpaca mount control",
  "type": "object",
  "properties": {
    "SkySettings": {
      "type": "object",
      "description": "Mount and telescope settings",
      "properties": {
        "Mount": {
          "type": "string",
          "description": "Mount type",
          "enum": [ "Simulator", "SkyWatcher" ],
          "default": "Simulator"
        },
        "Port": {
          "type": "string",
          "description": "Serial port for mount communication",
          "default": "COM1"
        },
        "BaudRate": {
          "type": "integer",
          "description": "Serial communication baud rate",
          "enum": [ 4800, 9600, 19200, 38400, 57600, 115200 ],
          "default": 9600
        },
        "DataBits": {
          "type": "integer",
          "description": "Serial data bits",
          "enum": [ 7, 8 ],
          "default": 8
        },
        "Handshake": {
          "type": "string",
          "description": "Serial handshake mode",
          "enum": [ "None", "XOnXOff", "RequestToSend", "RequestToSendXOnXOff" ],
          "default": "None"
        },
        "ReadTimeout": {
          "type": "integer",
          "description": "Serial read timeout in milliseconds",
          "minimum": 100,
          "default": 1000
        },
        "DTREnable": {
          "type": "boolean",
          "description": "Enable DTR signal",
          "default": false
        },
        "RTSEnable": {
          "type": "boolean",
          "description": "Enable RTS signal",
          "default": false
        },
        "Latitude": {
          "type": "number",
          "description": "Observer latitude in degrees",
          "minimum": -90,
          "maximum": 90,
          "default": 56.76
        },
        "Longitude": {
          "type": "number",
          "description": "Observer longitude in degrees",
          "minimum": -180,
          "maximum": 180,
          "default": -5.85
        },
        "Elevation": {
          "type": "number",
          "description": "Observer elevation in meters",
          "minimum": -500,
          "maximum": 9000,
          "default": 10.0
        },
        "UTCOffset": {
          "type": "string",
          "description": "UTC time offset (hh:mm:ss)",
          "pattern": "^-?\\d{2}:\\d{2}:\\d{2}$",
          "default": "00:00:00"
        },
        "AutoTrack": {
          "type": "boolean",
          "description": "Enable tracking on mount connection",
          "default": false
        },
        "AlignmentMode": {
          "type": "string",
          "description": "Mount alignment mode",
          "enum": [ "", "AltAz", "Polar", "GermanPolar" ],
          "default": "GermanPolar"
        },
        "EquatorialCoordinateType": {
          "type": "string",
          "description": "Equatorial coordinate system",
          "enum": [ "Other", "Topocentric", "J2000", "J2050", "B1950" ],
          "default": "Topocentric"
        },
        "AtPark": {
          "type": "boolean",
          "description": "Mount is currently parked",
          "default": false
        },
        "ApertureDiameter": {
          "type": "number",
          "description": "Telescope aperture diameter in meters",
          "minimum": 0,
          "default": 0.2
        },
        "ApertureArea": {
          "type": "number",
          "description": "Telescope aperture area in square meters",
          "minimum": 0,
          "default": 0.0269
        },
        "FocalLength": {
          "type": "number",
          "description": "Telescope focal length in meters",
          "minimum": 0,
          "default": 1.26
        },
        "Refraction": {
          "type": "boolean",
          "description": "Apply atmospheric refraction correction",
          "default": true
        },
        "Temperature": {
          "type": "number",
          "description": "Ambient temperature in Celsius",
          "minimum": -50,
          "maximum": 50,
          "default": 20.0
        },
        "CustomGearing": {
          "type": "boolean",
          "description": "Use custom gearing values",
          "default": false
        },
        "CustomRa360Steps": {
          "type": "integer",
          "description": "Custom RA axis steps per 360 degrees",
          "minimum": 0,
          "default": 0
        },
        "CustomRaWormTeeth": {
          "type": "integer",
          "description": "Custom RA worm gear teeth count",
          "minimum": 0,
          "default": 0
        },
        "CustomDec360Steps": {
          "type": "integer",
          "description": "Custom Dec axis steps per 360 degrees",
          "minimum": 0,
          "default": 0
        },
        "CustomDecWormTeeth": {
          "type": "integer",
          "description": "Custom Dec worm gear teeth count",
          "minimum": 0,
          "default": 0
        },
        "CustomRaTrackingOffset": {
          "type": "integer",
          "description": "Custom RA tracking offset",
          "default": 0
        },
        "CustomDecTrackingOffset": {
          "type": "integer",
          "description": "Custom Dec tracking offset",
          "default": 0
        },
        "RaBacklash": {
          "type": "integer",
          "description": "RA backlash compensation in steps",
          "minimum": 0,
          "default": 0
        },
        "DecBacklash": {
          "type": "integer",
          "description": "Dec backlash compensation in steps",
          "minimum": 0,
          "default": 0
        },
        "MinPulseRa": {
          "type": "integer",
          "description": "Minimum RA pulse guide duration in milliseconds",
          "minimum": 0,
          "default": 20
        },
        "MinPulseDec": {
          "type": "integer",
          "description": "Minimum Dec pulse guide duration in milliseconds",
          "minimum": 0,
          "default": 20
        },
        "DecPulseToGoTo": {
          "type": "boolean",
          "description": "Use GOTO mode for Dec pulse guiding",
          "default": false
        },
        "St4Guiderate": {
          "type": "integer",
          "description": "ST4 guide rate setting",
          "minimum": 1,
          "maximum": 8,
          "default": 2
        },
        "GuideRateOffsetX": {
          "type": "number",
          "description": "Guide rate offset for RA axis",
          "default": 0.5
        },
        "GuideRateOffsetY": {
          "type": "number",
          "description": "Guide rate offset for Dec axis",
          "default": 0.5
        },
        "TrackingRate": {
          "type": "string",
          "description": "Tracking rate mode",
          "enum": [ "Sidereal", "Lunar", "Solar", "King" ],
          "default": "Sidereal"
        },
        "SiderealRate": {
          "type": "number",
          "description": "Sidereal tracking rate in arcsec/sec",
          "default": 15.0410671787
        },
        "LunarRate": {
          "type": "number",
          "description": "Lunar tracking rate in arcsec/sec",
          "default": 14.685
        },
        "SolarRate": {
          "type": "number",
          "description": "Solar tracking rate in arcsec/sec",
          "default": 15.0
        },
        "KingRate": {
          "type": "number",
          "description": "King tracking rate in arcsec/sec",
          "default": 15.0369
        },
        "RATrackingOffset": {
          "type": "integer",
          "description": "RA tracking offset",
          "default": 0
        },
        "HomeAxisX": {
          "type": "number",
          "description": "Home position for RA/Az axis",
          "default": 90.0
        },
        "HomeAxisY": {
          "type": "number",
          "description": "Home position for Dec/Alt axis",
          "default": 90.0
        },
        "AutoHomeAxisX": {
          "type": "number",
          "description": "Auto home position for RA/Az axis",
          "default": 90.0
        },
        "AutoHomeAxisY": {
          "type": "number",
          "description": "Auto home position for Dec/Alt axis",
          "default": 90.0
        },
        "HomeWarning": {
          "type": "boolean",
          "description": "Show warning when finding home",
          "default": true
        },
        "ParkName": {
          "type": "string",
          "description": "Name of current park position",
          "default": "Default"
        },
        "ParkPositions": {
          "type": "array",
          "description": "Saved park positions",
          "items": {
            "type": "object",
            "properties": {
              "Name": {
                "type": "string",
                "description": "Park position name"
              },
              "X": {
                "type": "number",
                "description": "X axis position (RA/Az)"
              },
              "Y": {
                "type": "number",
                "description": "Y axis position (Dec/Alt)"
              }
            },
            "required": [ "Name", "X", "Y" ]
          },
          "default": [
            {
              "Name": "Default",
              "X": 90.0,
              "Y": 90.0
            },
            {
              "Name": "Home",
              "X": 90.0,
              "Y": 90.0
            }
          ]
        },
        "ParkAxes": {
          "type": "array",
          "description": "Park axis positions",
          "items": {
            "type": "number"
          },
          "minItems": 2,
          "maxItems": 2,
          "default": [ 90, 90 ]
        },
        "LimitPark": {
          "type": "boolean",
          "description": "Enable park limit",
          "default": false
        },
        "ParkLimitName": {
          "type": "string",
          "description": "Name of park limit",
          "default": ""
        },
        "LimitTracking": {
          "type": "boolean",
          "description": "Enable tracking limits",
          "default": false
        },
        "HourAngleLimit": {
          "type": "number",
          "description": "Hour angle limit in hours",
          "default": 15.0
        },
        "NoSyncPastMeridian": {
          "type": "boolean",
          "description": "Disable sync past meridian",
          "default": false
        },
        "SyncLimit": {
          "type": "integer",
          "description": "Sync limit in degrees",
          "minimum": 0,
          "default": 30
        },
        "SyncLimitOn": {
          "type": "boolean",
          "description": "Enable sync limit",
          "default": true
        },
        "AxisTrackingLimit": {
          "type": "number",
          "description": "Axis tracking limit",
          "default": 0.0
        },
        "HzLimitTracking": {
          "type": "boolean",
          "description": "Enable horizon tracking limit",
          "default": false
        },
        "ParkHzLimitName": {
          "type": "string",
          "description": "Park horizon limit name",
          "default": ""
        },
        "HzLimitPark": {
          "type": "boolean",
          "description": "Enable horizon limit for park",
          "default": false
        },
        "AxisHzTrackingLimit": {
          "type": "number",
          "description": "Axis horizon tracking limit",
          "default": 0.0
        },
        "AxisUpperLimitY": {
          "type": "number",
          "description": "Upper limit for Y axis",
          "default": 180.0
        },
        "AxisLowerLimitY": {
          "type": "number",
          "description": "Lower limit for Y axis",
          "default": -180.0
        },
        "AxisLimitX": {
          "type": "number",
          "description": "Limit for X axis",
          "default": 180.0
        },
        "PecOn": {
          "type": "boolean",
          "description": "Enable periodic error correction",
          "default": false
        },
        "PpecOn": {
          "type": "boolean",
          "description": "Enable permanent periodic error correction",
          "default": false
        },
        "AlternatingPPEC": {
          "type": "boolean",
          "description": "Use alternating PPEC",
          "default": false
        },
        "PecOffSet": {
          "type": "integer",
          "description": "PEC offset value",
          "default": 0
        },
        "PecWormFile": {
          "type": "string",
          "description": "PEC worm file path",
          "default": ""
        },
        "Pec360File": {
          "type": "string",
          "description": "PEC 360 file path",
          "default": ""
        },
        "PecMode": {
          "type": "string",
          "description": "PEC mode",
          "enum": [ "PecWorm", "Pec360" ],
          "default": "PecWorm"
        },
        "EncodersOn": {
          "type": "boolean",
          "description": "Enable encoders",
          "default": false
        },
        "HcSpeed": {
          "type": "string",
          "description": "Hand controller speed setting",
          "default": "Seven"
        },
        "HcMode": {
          "type": "string",
          "description": "Hand controller mode",
          "enum": [ "Axes", "Equatorial", "AltAz" ],
          "default": "Axes"
        },
        "HcAntiRa": {
          "type": "boolean",
          "description": "Reverse RA hand controller direction",
          "default": false
        },
        "HcAntiDec": {
          "type": "boolean",
          "description": "Reverse Dec hand controller direction",
          "default": false
        },
        "HcFlipEW": {
          "type": "boolean",
          "description": "Flip East/West hand controller buttons",
          "default": false
        },
        "HcFlipNS": {
          "type": "boolean",
          "description": "Flip North/South hand controller buttons",
          "default": false
        },
        "HcPulseGuides": {
          "type": "array",
          "description": "Hand controller pulse guide settings",
          "items": {
            "type": "object",
            "properties": {
              "Speed": {
                "type": "integer",
                "description": "Speed level (1-8)",
                "minimum": 1,
                "maximum": 8
              },
              "Duration": {
                "type": "integer",
                "description": "Pulse duration in milliseconds",
                "minimum": 0
              },
              "Interval": {
                "type": "integer",
                "description": "Pulse interval in milliseconds",
                "minimum": 0
              },
              "Rate": {
                "type": "number",
                "description": "Guide rate multiplier",
                "minimum": 0
              }
            },
            "required": [ "Speed", "Duration", "Interval", "Rate" ]
          },
          "default": [
            {
              "Speed": 1,
              "Duration": 1000,
              "Interval": 1000,
              "Rate": 0.012
            },
            {
              "Speed": 2,
              "Duration": 1000,
              "Interval": 1000,
              "Rate": 0.024
            },
            {
              "Speed": 3,
              "Duration": 1000,
              "Interval": 1000,
              "Rate": 0.165
            },
            {
              "Speed": 4,
              "Duration": 1000,
              "Interval": 1000,
              "Rate": 0.238
            },
            {
              "Speed": 5,
              "Duration": 1000,
              "Interval": 1000,
              "Rate": 0.7
            },
            {
              "Speed": 6,
              "Duration": 1000,
              "Interval": 1000,
              "Rate": 1.4
            },
            {
              "Speed": 7,
              "Duration": 1000,
              "Interval": 1000,
              "Rate": 2.8
            },
            {
              "Speed": 8,
              "Duration": 1000,
              "Interval": 1000,
              "Rate": 3.5
            }
          ]
        },
        "DisableKeysOnGoTo": {
          "type": "boolean",
          "description": "Disable hand controller keys during GOTO",
          "default": false
        },
        "SpiralPause": {
          "type": "integer",
          "description": "Spiral search pause duration in milliseconds",
          "minimum": 0,
          "default": 10
        },
        "SpiralSpeed": {
          "type": "integer",
          "description": "Spiral search speed",
          "minimum": 1,
          "default": 4
        },
        "SpiralFov": {
          "type": "integer",
          "description": "Spiral search field of view in arcseconds",
          "minimum": 0,
          "default": 4800
        },
        "SpiralWidth": {
          "type": "integer",
          "description": "Spiral search width in arcseconds",
          "minimum": 0,
          "default": 4800
        },
        "SpiralHeight": {
          "type": "integer",
          "description": "Spiral search height in arcseconds",
          "minimum": 0,
          "default": 4800
        },
        "SpiralDistance": {
          "type": "number",
          "description": "Spiral search distance in arcseconds",
          "minimum": 0,
          "default": 30.0
        },
        "SpiralLimits": {
          "type": "boolean",
          "description": "Enable spiral search limits",
          "default": true
        },
        "CameraWidth": {
          "type": "number",
          "description": "Camera width in mm",
          "minimum": 0,
          "default": 0.0
        },
        "CameraHeight": {
          "type": "number",
          "description": "Camera height in mm",
          "minimum": 0,
          "default": 0.0
        },
        "EyepieceFS": {
          "type": "number",
          "description": "Eyepiece field stop in mm",
          "minimum": 0,
          "default": 0.0
        },
        "CanAlignMode": {
          "type": "boolean",
          "description": "Can change alignment mode",
          "default": true
        },
        "CanAltAz": {
          "type": "boolean",
          "description": "Can operate in Alt/Az mode",
          "default": true
        },
        "CanDoesRefraction": {
          "type": "boolean",
          "description": "Can apply refraction correction",
          "default": true
        },
        "CanEquatorial": {
          "type": "boolean",
          "description": "Can operate in equatorial mode",
          "default": true
        },
        "CanFindHome": {
          "type": "boolean",
          "description": "Can find home position",
          "default": true
        },
        "CanLatLongElev": {
          "type": "boolean",
          "description": "Can set latitude/longitude/elevation",
          "default": true
        },
        "CanOptics": {
          "type": "boolean",
          "description": "Can configure optical parameters",
          "default": true
        },
        "CanPark": {
          "type": "boolean",
          "description": "Can park mount",
          "default": true
        },
        "CanPierSide": {
          "type": "boolean",
          "description": "Can report pier side",
          "default": false
        },
        "CanPulseGuide": {
          "type": "boolean",
          "description": "Can pulse guide",
          "default": true
        },
        "CanSetEquRates": {
          "type": "boolean",
          "description": "Can set equatorial rates",
          "default": true
        },
        "CanSetGuideRates": {
          "type": "boolean",
          "description": "Can set guide rates",
          "default": true
        },
        "CanSetPark": {
          "type": "boolean",
          "description": "Can set park position",
          "default": true
        },
        "CanSetPierSide": {
          "type": "boolean",
          "description": "Can set pier side",
          "default": true
        },
        "CanSetTracking": {
          "type": "boolean",
          "description": "Can enable/disable tracking",
          "default": true
        },
        "CanSiderealTime": {
          "type": "boolean",
          "description": "Can report sidereal time",
          "default": true
        },
        "CanSlew": {
          "type": "boolean",
          "description": "Can slew mount",
          "default": true
        },
        "CanSlewAltAz": {
          "type": "boolean",
          "description": "Can slew to Alt/Az coordinates",
          "default": true
        },
        "CanSlewAltAzAsync": {
          "type": "boolean",
          "description": "Can slew to Alt/Az coordinates asynchronously",
          "default": true
        },
        "AxisModelOffsets": {
          "type": "object",
          "description": "Axis model offsets",
          "properties": {
            "X": {
              "type": "number",
              "description": "X axis offset in degrees"
            },
            "Y": {
              "type": "number",
              "description": "Y axis offset in degrees"
            },
            "Z": {
              "type": "number",
              "description": "Z axis offset in degrees"
            }
          },
          "required": [ "X", "Y", "Z" ],
          "default": {
            "X": 90.0,
            "Y": -90.0,
            "Z": 0.0
          }
        }
      },
      "required": [ "Mount", "Port", "BaudRate", "DataBits", "Handshake", "ReadTimeout", "Latitude", "Longitude", "Elevation", "UTCOffset", "AlignmentMode", "EquatorialCoordinateType", "AtPark", "ApertureDiameter", "ApertureArea", "FocalLength", "Refraction", "Temperature", "CustomGearing", "CustomRa360Steps", "CustomRaWormTeeth", "CustomDec360Steps", "CustomDecWormTeeth", "CustomRaTrackingOffset", "CustomDecTrackingOffset", "RaBacklash", "DecBacklash", "MinPulseRa", "MinPulseDec", "DecPulseToGoTo", "St4Guiderate", "GuideRateOffsetX", "GuideRateOffsetY", "TrackingRate", "SiderealRate", "LunarRate", "SolarRate", "KingRate", "RATrackingOffset", "HomeAxisX", "HomeAxisY", "AutoHomeAxisX", "AutoHomeAxisY", "HomeWarning", "ParkName", "ParkPositions", "ParkAxes", "LimitPark", "ParkLimitName", "LimitTracking", "HourAngleLimit", "NoSyncPastMeridian", "SyncLimit", "SyncLimitOn", "AxisTrackingLimit", "HzLimitTracking", "ParkHzLimitName", "HzLimitPark", "AxisHzTrackingLimit", "AxisUpperLimitY", "AxisLowerLimitY", "AxisLimitX", "PecOn", "PpecOn", "AlternatingPPEC", "PecOffSet", "PecWormFile", "Pec360File", "PecMode", "EncodersOn", "HcSpeed", "HcMode", "HcAntiRa", "HcAntiDec", "HcFlipEW", "HcFlipNS", "HcPulseGuides", "DisableKeysOnGoTo", "SpiralPause", "SpiralSpeed", "SpiralFov", "SpiralWidth", "SpiralHeight", "SpiralDistance", "SpiralLimits", "CameraWidth", "CameraHeight", "EyepieceFS", "CanAlignMode", "CanAltAz", "CanDoesRefraction", "CanEquatorial", "CanFindHome", "CanLatLongElev", "CanOptics", "CanPark", "CanPierSide", "CanPulseGuide", "CanSetEquRates", "CanSetGuideRates", "CanSetPark", "CanSetPierSide", "CanSetTracking", "CanSiderealTime", "CanSlew", "CanSlewAltAz", "CanSlewAltAzAsync" ]
    }
  }
}
