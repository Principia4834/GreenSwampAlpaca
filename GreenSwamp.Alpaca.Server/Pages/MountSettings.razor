@code {
    private SkySettings _settings = new();
    private bool _saving;
    private bool _showMigration;
    private string? _previousVersion;
    private string? _message;
    private bool _isError;
    private string _activeTab = "connection";
    private string _utcOffsetString = "00:00:00";
    
    // JSON string properties for complex types
    private string _axisModelOffsetsJson = string.Empty;
    private string _parkAxesJson = string.Empty;
    private string _parkPositionsJson = string.Empty;
    private string _hcPulseGuidesJson = string.Empty;

    protected override void OnInitialized()
    {
        LoadSettings();
        CheckForMigration();
        SettingsService.SettingsChanged += OnSettingsChanged;
    }

    private void LoadSettings()
    {
        _settings = SettingsService.GetSettings();
        _utcOffsetString = _settings.UTCOffset.ToString(@"hh\:mm\:ss");
        
        // Serialize complex types to JSON strings
        _axisModelOffsetsJson = JsonSerializer.Serialize(_settings.AxisModelOffsets, new JsonSerializerOptions { WriteIndented = true });
        _parkAxesJson = JsonSerializer.Serialize(_settings.ParkAxes);
        _parkPositionsJson = JsonSerializer.Serialize(_settings.ParkPositions, new JsonSerializerOptions { WriteIndented = true });
        _hcPulseGuidesJson = JsonSerializer.Serialize(_settings.HcPulseGuides, new JsonSerializerOptions { WriteIndented = true });
    }

    private void CheckForMigration()
    {
        var versions = SettingsService.AvailableVersions
            .Where(v => v != SettingsService.CurrentVersion)
            .OrderByDescending(v => new Version(v))
            .ToList();

        if (versions.Any())
        {
            _previousVersion = versions.First();
            _showMigration = true;
        }
    }

    private async Task SaveSettings()
    {
        _saving = true;
        _message = null;

        try
        {
            // Deserialize JSON strings back to complex types
            try
            {
                _settings.AxisModelOffsets = JsonSerializer.Deserialize<SkySettings.AxisModelOffset>(_axisModelOffsetsJson) ?? new SkySettings.AxisModelOffset();
            }
            catch (JsonException ex)
            {
                _message = $"Invalid JSON for Axis Model Offsets: {ex.Message}";
                _isError = true;
                _saving = false;
                return;
            }
            
            try
            {
                _settings.ParkAxes = JsonSerializer.Deserialize<double[]>(_parkAxesJson) ?? Array.Empty<double>();
            }
            catch (JsonException ex)
            {
                _message = $"Invalid JSON for Park Axes: {ex.Message}";
                _isError = true;
                _saving = false;
                return;
            }
            
            try
            {
                _settings.ParkPositions = JsonSerializer.Deserialize<List<SkySettings.ParkPosition>>(_parkPositionsJson) ?? new List<SkySettings.ParkPosition>();
            }
            catch (JsonException ex)
            {
                _message = $"Invalid JSON for Park Positions: {ex.Message}";
                _isError = true;
                _saving = false;
                return;
            }
            
            try
            {
                _settings.HcPulseGuides = JsonSerializer.Deserialize<List<SkySettings.HcPulseGuide>>(_hcPulseGuidesJson) ?? new List<SkySettings.HcPulseGuide>();
            }
            catch (JsonException ex)
            {
                _message = $"Invalid JSON for Hand Controller Pulse Guides: {ex.Message}";
                _isError = true;
                _saving = false;
                return;
            }
            
            await SettingsService.SaveSettingsAsync(_settings);
            _message = "Settings saved successfully!";
            _isError = false;
            Logger.LogInformation("Settings saved by user");
        }
        catch (Exception ex)
        {
            _message = $"Error saving settings: {ex.Message}";
            _isError = true;
            Logger.LogError(ex, "Failed to save settings");
        }
        finally
        {
            _saving = false;
        }
    }

    private async Task ResetToDefaults()
    {
        try
        {
            await SettingsService.ResetToDefaultsAsync();
            LoadSettings();
            _message = "Settings reset to defaults";
            _isError = false;
        }
        catch (Exception ex)
        {
            _message = $"Error resetting: {ex.Message}";
            _isError = true;
        }
    }

    private async Task MigrateSettings()
    {
        try
        {
            var success = await SettingsService.MigrateFromPreviousVersionAsync();
            if (success)
            {
                LoadSettings();
                _showMigration = false;
                _message = $"Settings migrated from version {_previousVersion}";
                _isError = false;
            }
            else
            {
                _message = "No settings to migrate";
                _isError = true;
            }
        }
        catch (Exception ex)
        {
            _message = $"Migration failed: {ex.Message}";
            _isError = true;
        }
    }

    private void ReloadSettings()
    {
        LoadSettings();
        _message = "Settings reloaded";
        _isError = false;
    }

    private void ParseUtcOffset()
    {
        if (TimeSpan.TryParse(_utcOffsetString, out var offset))
        {
            _settings.UTCOffset = offset;
        }
    }

    private void OnSettingsChanged(object? sender, SkySettings newSettings)
    {
        _settings = newSettings;
        _utcOffsetString = _settings.UTCOffset.ToString(@"hh\:mm\:ss");
        
        // Update JSON strings when settings change
        _axisModelOffsetsJson = JsonSerializer.Serialize(_settings.AxisModelOffsets, new JsonSerializerOptions { WriteIndented = true });
        _parkAxesJson = JsonSerializer.Serialize(_settings.ParkAxes);
        _parkPositionsJson = JsonSerializer.Serialize(_settings.ParkPositions, new JsonSerializerOptions { WriteIndented = true });
        _hcPulseGuidesJson = JsonSerializer.Serialize(_settings.HcPulseGuides, new JsonSerializerOptions { WriteIndented = true });
        
        InvokeAsync(StateHasChanged);
    }

    public void Dispose()
    {
        SettingsService.SettingsChanged -= OnSettingsChanged;
    }
}